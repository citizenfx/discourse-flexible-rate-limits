{{#d-modal-body id="edit-category-group-modal" title="flexible_rate_limits.admin.category_group"}}

  {{#if errorMsg}}
    <div class="alert">{{errorMsg}}</div>
  {{/if}}

  <section class="field">
    <div class="control-group">
      <label>
        {{i18n "flexible_rate_limits.admin.category_group_name"}}:
        {{input type="text" value=categoryGroupName}}
      </label>

      <label>
        {{i18n "flexible_rate_limits.admin.default_post_limit"}}:
        {{input type="number" value=postLimit min=1}}
      </label>

      <label>
        {{i18n "flexible_rate_limits.admin.default_topic_limit"}}:
        {{input type="number" value=topicLimit min=1}}
      </label>
    </div>
  </section>

{{/d-modal-body}}

<div class="modal-footer">
  {{d-button
    disabled=disabled
    action="save"
    class="btn-large btn-primary"
    label="flexible_rate_limits.admin.save"}}
</div>