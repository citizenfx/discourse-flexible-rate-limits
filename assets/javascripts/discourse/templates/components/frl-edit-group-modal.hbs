{{#d-modal-body id="frl-edit-group-modal" title="flexible_rate_limits.admin.group"}}

  <section class="field">
    <div class="control-group">
      <label>
        {{i18n "flexible_rate_limits.admin.group"}}:

        <select onchange={{action (mut selectedGroupId) value="target.value" }}>
          <option value="">{{i18n "flexible_rate_limits.admin.select_group"}}</option>
          {{#if group.id}}
            <option value="{{group.id}}" selected={{if (eq group.id selectedGroupId) 'true'}}>{{groupName groups group}}</option>
          {{/if}}

          {{#each availableGroups as |g|}}
            <option value="{{g.id}}" selected={{if (eq g.id selectedGroupId) 'true'}}>{{groupName groups g}}</option>
          {{/each}}
        </select>
      </label>

      <label>
        {{i18n "flexible_rate_limits.admin.post_limit"}}:
        {{input type="number" value=postLimit min=1}}
      </label>

      <label>
        {{i18n "flexible_rate_limits.admin.topic_limit"}}:
        {{input type="number" value=topicLimit min=1}}
      </label>
    </div>
  </section>

{{/d-modal-body}}

<div class="modal-footer">
  {{d-button
    disabled=disabled
    action="save"
    class="btn-large btn-primary"
    label="flexible_rate_limits.admin.save"}}
</div>